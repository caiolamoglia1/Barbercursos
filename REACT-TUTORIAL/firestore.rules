rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra para coleção userProgress
    match /userProgress/{userId} {
      // Permite ler e escrever apenas se o usuário estiver autenticado
      // e for o próprio dono dos dados
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permite acesso a subcoleções (tutorials)
      match /tutorials/{tutorialId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Permite acesso a módulos dentro de tutorials
        match /modules/{moduleId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Bloqueia acesso a todas as outras coleções por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
